{% extends "layouts/page.njk" %}

{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "govuk/components/tag/macro.njk" import govukTag %}
{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" id="main-content" role="main">
      {{ govukBreadcrumbs({
        items: [
          {
            text: "Home",
            href: "/"
          },
          {
            text: "Standards"
          }
        ]
      }) }}

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">Standards Management</h1>
          
          <p class="govuk-body">Use this service to:</p>
          <ul class="govuk-list govuk-list--bullet">
            <li>manage code review standards and classifications</li>
            <li>create and edit standard sets for different technologies</li>
            <li>define rules for automated code reviews</li>
          </ul>

          {{ govukInsetText({
            text: "Standards and classifications help ensure consistent code quality across all Defra services."
          }) }}

          {{ govukSummaryList({
            rows: [
              {
                key: {
                  text: "Classifications"
                },
                value: {
                  html: govukTag({
                    text: "5 active",
                    classes: "govuk-tag--blue"
                  })
                },
                actions: {
                  classes: "govuk-!-width-one-quarter",
                  items: [
                    {
                      href: "/standards/classifications",
                      text: "Manage",
                      visuallyHiddenText: "classifications"
                    }
                  ]
                }
              },
              {
                key: {
                  text: "Standard Sets"
                },
                value: {
                  html: govukTag({
                    text: "2 active",
                    classes: "govuk-tag--green"
                  })
                },
                actions: {
                  classes: "govuk-!-width-one-quarter",
                  items: [
                    {
                      href: "/standards/standard-sets",
                      text: "Manage",
                      visuallyHiddenText: "standards"
                    }
                  ]
                }
              }
            ]
          }) }}
        </div>

        <div class="govuk-grid-column-one-third">
          <aside class="app-related-items" role="complementary">
            <h2 class="govuk-heading-m">Related links</h2>
            <ul class="govuk-list">
              <li>
                <a class="govuk-link" href="#">
                  Defra development standards
                </a>
              </li>
              <li>
                <a class="govuk-link" href="#">
                  Code review guidelines
                </a>
              </li>
              <li>
                <a class="govuk-link" href="#">
                  Technology standards
                </a>
              </li>
            </ul>
          </aside>
        </div>
      </div>
    </main>
  </div>
{% endblock %}
